{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "esnext",
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@ui/*": ["ui/*"],
      "@hooks/*": ["hooks/*"],
      "@domain/*": ["domain/*"],
      "@navigation/*": ["navigation/*"],
      "@features/*": ["features/*"],
      "@providers/*": ["providers/*"],
      "@store/*": ["store/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
